import { Button, VerticalBox, HorizontalBox } from "std-widgets.slint";

export global AppColors {
    in-out property <color> background: #121212;
    in-out property <color> primary: #1DB954;
    in-out property <color> secondary: #ffffff;
    in-out property <color> accent: #b3b3b3;
}

export component MainWindow inherits Window {
    title: "Aurora Player";
    background: AppColors.background;
    min-width: 800px;
    min-height: 600px;

    in property <string> track-title: "No track playing";
    in property <string> track-artist: "Unknown Artist";
    in property <image> album-art: @image-url("");

    callback play-pause();
    callback next();
    callback prev();

    VerticalBox {
        alignment: center;
        spacing: 20px;

        // Album Art
        Rectangle {
            width: 300px;
            height: 300px;
            background: #282828;
            border-radius: 8px;
            Image {
                source: album-art;
                width: 100%;
                height: 100%;
                image-fit: contain;
            }
        }

        // Metadata
        VerticalBox {
            alignment: center;
            spacing: 5px;
            Text {
                text: track-title;
                font-size: 24px;
                color: AppColors.secondary;
                horizontal-alignment: center;
            }
            Text {
                text: track-artist;
                font-size: 18px;
                color: AppColors.accent;
                horizontal-alignment: center;
            }
        }

        // Controls
        HorizontalBox {
            alignment: center;
            spacing: 20px;
            Button {
                text: "Prev";
                clicked => { prev() }
            }
            Button {
                text: "Play/Pause";
                primary: true;
                clicked => { play-pause() }
            }
            Button {
                text: "Next";
                clicked => { next() }
            }
        }
    }
}
